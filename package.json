  "bugs": {
    "url": "https://github.com/rtfeldman/elm-workshop/issues"
  },
  "homepage": "https://github.com/rtfeldman/elm-workshop#readme",
  "devDependencies": {
    "elm-live": "2.0.4"
  }
}
